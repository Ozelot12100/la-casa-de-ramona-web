---
import { MessageCircle } from "lucide-react";
---

<a
    href="https://api.whatsapp.com/send?phone=52&text=Hi!%20I'm%20interested%20in%20staying%20at%20La%20Casa%20de%20Ramona."
    target="_blank"
    class="fixed bottom-6 right-6 z-50 group flex items-center justify-center"
    aria-label="Chat on WhatsApp"
>
    <span
        class="absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75 animate-ping group-hover:hidden"
    ></span>

    <div
        class="relative bg-green-500 hover:bg-green-600 text-white p-4 rounded-full shadow-2xl transition-all duration-300 hover:scale-110 flex items-center gap-2"
    >
        <MessageCircle size={28} fill="white" class="text-green-500" />
        <span
            class="max-w-0 overflow-hidden group-hover:max-w-xs transition-all duration-500 ease-in-out whitespace-nowrap font-bold pr-0 group-hover:pr-2"
        >
            Chat with Host
        </span>
    </div>
</a>
