---

<section id="contact" class="py-24 bg-slate-50 relative">
    <div class="max-w-4xl mx-auto px-6 relative z-10">
        <div
            class="bg-white rounded-3xl shadow-xl overflow-hidden border border-slate-100"
        >
            <div class="flex flex-col md:flex-row">
                <div
                    class="md:w-2/5 bg-blue-900 text-white p-10 flex flex-col justify-between relative overflow-hidden"
                >
                    <div
                        class="absolute top-0 left-0 w-full h-full bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"
                    >
                    </div>
                    <div>
                        <h3 class="text-3xl font-bold mb-4">{text.title}</h3>
                        <p class="text-blue-100 mb-6 leading-relaxed">
                            {text.desc}
                        </p>
                        <div
                            class="bg-blue-800/50 p-4 rounded-xl backdrop-blur-sm border border-blue-700/50"
                        >
                            <p class="text-sm font-bold text-yellow-400 mb-1">
                                ðŸ’¡ {text.guarantee}
                            </p>
                            <p class="text-xs text-blue-200">
                                {text.guaranteeDesc}
                            </p>
                        </div>
                    </div>
                    <div class="mt-10">
                        <p class="text-sm text-blue-300 mb-1">{text.chat}</p>
                        <a
                            href="https://wa.me/520000000000"
                            class="flex items-center gap-2 font-bold hover:text-green-400 transition"
                        >
                            {text.chatBtn}
                        </a>
                    </div>
                </div>

                <div class="md:w-3/5 p-10">
                    <form
                        action="https://formspree.io/f/xgoewanq"
                        method="POST"
                        class="space-y-5"
                    >
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <div class="relative">
                                <div
                                    class="absolute top-3.5 left-3 text-slate-400"
                                >
                                    <User size={18} />
                                </div>
                                <input
                                    type="text"
                                    name="name"
                                    placeholder={text.name}
                                    required
                                    class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                                />
                            </div>
                            <div class="relative">
                                <div
                                    class="absolute top-3.5 left-3 text-slate-400"
                                >
                                    <Phone size={18} />
                                </div>
                                <input
                                    type="tel"
                                    name="phone"
                                    placeholder={text.phone}
                                    class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                                />
                            </div>
                        </div>

                        <div class="relative">
                            <div class="absolute top-3.5 left-3 text-slate-400">
                                <Mail size={18} />
                            </div>
                            <input
                                type="email"
                                name="email"
                                placeholder={text.email}
                                required
                                class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                            />
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <div class="relative">
                                <div
                                    class="absolute top-3.5 left-3 text-slate-400"
                                >
                                    <Calendar size={18} />
                                </div>
                                <input
                                    type="text"
                                    name="dates"
                                    placeholder={text.dates}
                                    required
                                    onfocus="(this.type='date')"
                                    onblur="(this.type='text')"
                                    class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                                />
                            </div>
                            <div class="relative">
                                <div
                                    class="absolute top-3.5 left-3 text-slate-400"
                                >
                                    <Users size={18} />
                                </div>
                                <select
                                    name="guests"
                                    class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition text-slate-500 appearance-none"
                                >
                                    <option value="" disabled selected
                                        >{text.guests}</option
                                    >
                                    <option value="1-4">1-4</option>
                                    <option value="5-8">5-8</option>
                                    <option value="9-12">9-12</option>
                                    <option value="13-16">13-16</option>
                                    <option value="16+">16+</option>
                                </select>
                            </div>
                        </div>

                        <textarea
                            name="message"
                            rows="3"
                            placeholder={text.message}
                            class="w-full p-4 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                        ></textarea>

                        <button
                            type="submit"
                            class="w-full bg-blue-900 text-white font-bold py-4 rounded-xl hover:bg-blue-800 transition flex items-center justify-center gap-2 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
                        >
                            <Send size={20} />
                            {text.btn}
                        </button>

                        <p class="text-xs text-center text-slate-400 mt-4">
                            {text.privacy}
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
