---
import { Send, Calendar, Users, Mail, User, Phone } from "lucide-react";
---

<section id="contact" class="py-24 bg-slate-50 relative">
    <div class="max-w-4xl mx-auto px-6 relative z-10">
        <div
            class="bg-white rounded-3xl shadow-xl overflow-hidden border border-slate-100"
        >
            <div class="flex flex-col md:flex-row">
                <div
                    class="md:w-2/5 bg-blue-900 text-white p-10 flex flex-col justify-between relative overflow-hidden"
                >
                    <div
                        class="absolute top-0 left-0 w-full h-full bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"
                    >
                    </div>

                    <div>
                        <h3 class="text-3xl font-bold mb-4">Ready to Relax?</h3>
                        <p class="text-blue-100 mb-6 leading-relaxed">
                            Send us your dates and we'll get back to you with a
                            quote within 24 hours.
                        </p>
                        <div
                            class="bg-blue-800/50 p-4 rounded-xl backdrop-blur-sm border border-blue-700/50"
                        >
                            <p class="text-sm font-bold text-yellow-400 mb-1">
                                ðŸ’¡ Best Rate Guarantee
                            </p>
                            <p class="text-xs text-blue-200">
                                Booking directly with us saves you the service
                                fees.
                            </p>
                        </div>
                    </div>

                    <div class="mt-10">
                        <p class="text-sm text-blue-300 mb-1">
                            Prefer to chat?
                        </p>
                        <a
                            href="https://wa.me/520000000000"
                            class="flex items-center gap-2 font-bold hover:text-green-400 transition"
                        >
                            WhatsApp Us â†’
                        </a>
                    </div>
                </div>

                <div class="md:w-3/5 p-10">
                    <form
                        action="https://formspree.io/f/xbjvlqrq"
                        method="POST"
                        class="space-y-5"
                    >
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <div class="relative">
                                <div
                                    class="absolute top-3.5 left-3 text-slate-400"
                                >
                                    <User size={18} />
                                </div>
                                <input
                                    type="text"
                                    name="name"
                                    placeholder="Your Name"
                                    required
                                    class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                                />
                            </div>

                            <div class="relative">
                                <div
                                    class="absolute top-3.5 left-3 text-slate-400"
                                >
                                    <Phone size={18} />
                                </div>
                                <input
                                    type="tel"
                                    name="phone"
                                    placeholder="Phone"
                                    class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                                />
                            </div>
                        </div>

                        <div class="relative">
                            <div class="absolute top-3.5 left-3 text-slate-400">
                                <Mail size={18} />
                            </div>
                            <input
                                type="email"
                                name="email"
                                placeholder="Email Address"
                                required
                                class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                            />
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <div class="relative">
                                <div
                                    class="absolute top-3.5 left-3 text-slate-400"
                                >
                                    <Calendar size={18} />
                                </div>
                                <input
                                    type="text"
                                    name="dates"
                                    placeholder="Approx Dates"
                                    required
                                    onfocus="(this.type='date')"
                                    onblur="(this.type='text')"
                                    class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                                />
                            </div>

                            <div class="relative">
                                <div
                                    class="absolute top-3.5 left-3 text-slate-400"
                                >
                                    <Users size={18} />
                                </div>
                                <select
                                    name="guests"
                                    class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition text-slate-500 appearance-none"
                                >
                                    <option value="" disabled selected
                                        >Guests</option
                                    >
                                    <option value="1-4">1-4 Guests</option>
                                    <option value="5-8">5-8 Guests</option>
                                    <option value="9-12">9-12 Guests</option>
                                    <option value="13-16">13-16 Guests</option>
                                    <option value="16+">16+ Guests</option>
                                </select>
                            </div>
                        </div>

                        <textarea
                            name="message"
                            rows="3"
                            placeholder="Any questions? Bringing pets?"
                            class="w-full p-4 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                        ></textarea>

                        <button
                            type="submit"
                            class="w-full bg-blue-900 text-white font-bold py-4 rounded-xl hover:bg-blue-800 transition flex items-center justify-center gap-2 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
                        >
                            <Send size={20} /> Get Quote
                        </button>

                        <p class="text-xs text-center text-slate-400 mt-4">
                            We respect your privacy. No spam.
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
