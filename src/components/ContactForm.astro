---
import {
    Send,
    Calendar,
    Users,
    Mail,
    User,
    Phone,
    ChevronDown,
} from "lucide-react";

interface Props {
    lang?: "en" | "es";
}

const { lang = "en" } = Astro.props;

const t = {
    en: {
        title: "Ready to Relax?",
        desc: "Send us your dates and we'll get back to you with a quote within 24 hours.",
        guarantee: "Best Rate Guarantee",
        guaranteeDesc: "Booking directly with us saves you the service fees.",
        name: "Your Name",
        phone: "Phone",
        email: "Email Address",
        checkin: "Check-in",
        checkout: "Check-out",
        guests: "Guests",
        message: "Any questions? Bringing pets?",
        btn: "Get Quote",
        btnSending: "Sending...",
        privacy: "We respect your privacy. No spam.",
    },
    es: {
        title: "Â¿Listo para relajarte?",
        desc: "EnvÃ­anos tus fechas y te enviaremos una cotizaciÃ³n en menos de 24 horas.",
        guarantee: "Mejor Precio Garantizado",
        guaranteeDesc:
            "Reservar directo con nosotros te ahorra las comisiones de servicio.",
        name: "Tu Nombre",
        phone: "TelÃ©fono",
        email: "Correo ElectrÃ³nico",
        checkin: "Llegada",
        checkout: "Salida",
        guests: "HuÃ©spedes",
        message: "Â¿Dudas? Â¿Traes mascotas?",
        btn: "Pedir CotizaciÃ³n",
        btnSending: "Enviando...",
        privacy: "Respetamos tu privacidad. Sin spam.",
    },
};

const text = t[lang];
---

<section id="contact" class="py-24 bg-slate-50 relative">
    <div class="max-w-4xl mx-auto px-6 relative z-10">
        <div
            class="bg-white rounded-3xl shadow-xl overflow-hidden border border-slate-100"
        >
            <div class="flex flex-col md:flex-row">
                <div
                    class="md:w-2/5 bg-blue-900 text-white p-10 flex flex-col relative overflow-hidden"
                >
                    <div
                        class="absolute top-0 left-0 w-full h-full bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"
                    >
                    </div>

                    <div
                        class="relative z-10 h-full flex flex-col justify-center"
                    >
                        <h3 class="text-3xl font-bold mb-4">{text.title}</h3>
                        <p class="text-blue-100 mb-8 leading-relaxed">
                            {text.desc}
                        </p>

                        <div
                            class="bg-blue-800/50 p-6 rounded-xl backdrop-blur-sm border border-blue-700/50 shadow-inner"
                        >
                            <p
                                class="text-base font-bold text-yellow-400 mb-2 flex items-center gap-2"
                            >
                                <span>ðŸ’¡</span>
                                {text.guarantee}
                            </p>
                            <p class="text-sm text-blue-200 leading-snug">
                                {text.guaranteeDesc}
                            </p>
                        </div>
                    </div>
                </div>

                <div class="md:w-3/5 p-10">
                    <form
                        id="quoteForm"
                        action="https://formspree.io/f/xgoewanq"
                        method="POST"
                        class="space-y-5"
                    >
                        <input
                            type="hidden"
                            name="_subject"
                            value="Nueva Solicitud de CotizaciÃ³n (Web)"
                        />

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <div class="relative">
                                <div
                                    class="absolute top-3.5 left-3 text-slate-400"
                                >
                                    <User size={18} />
                                </div>
                                <input
                                    type="text"
                                    name="name"
                                    placeholder={text.name}
                                    required
                                    maxlength="60"
                                    class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                                />
                            </div>
                            <div class="relative">
                                <div
                                    class="absolute top-3.5 left-3 text-slate-400"
                                >
                                    <Phone size={18} />
                                </div>
                                <input
                                    type="tel"
                                    name="phone"
                                    id="phoneInput"
                                    placeholder={text.phone}
                                    inputmode="numeric"
                                    maxlength="15"
                                    class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                                />
                            </div>
                        </div>

                        <div class="relative">
                            <div class="absolute top-3.5 left-3 text-slate-400">
                                <Mail size={18} />
                            </div>
                            <input
                                type="email"
                                name="email"
                                placeholder={text.email}
                                required
                                maxlength="80"
                                pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$"
                                title="Por favor, introduce un email vÃ¡lido (ej: nombre@dominio.com)"
                                class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                            />
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <div class="relative">
                                <div
                                    class="absolute top-3.5 left-3 text-slate-400"
                                >
                                    <Calendar size={18} />
                                </div>
                                <input
                                    type="text"
                                    name="checkin"
                                    id="checkin"
                                    placeholder={text.checkin}
                                    required
                                    onfocus="(this.type='date')"
                                    onblur="(this.value ? this.type='date' : this.type='text')"
                                    class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                                />
                            </div>
                            <div class="relative">
                                <div
                                    class="absolute top-3.5 left-3 text-slate-400"
                                >
                                    <Calendar size={18} />
                                </div>
                                <input
                                    type="text"
                                    name="checkout"
                                    id="checkout"
                                    placeholder={text.checkout}
                                    required
                                    onfocus="(this.type='date')"
                                    onblur="(this.value ? this.type='date' : this.type='text')"
                                    class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                                />
                            </div>
                        </div>

                        <div class="relative">
                            <div
                                class="absolute top-3.5 left-3 text-slate-400 z-10"
                            >
                                <Users size={18} />
                            </div>
                            <div
                                class="absolute top-3.5 right-3 text-slate-400 pointer-events-none z-10"
                            >
                                <ChevronDown size={18} />
                            </div>
                            <select
                                name="guests"
                                required
                                class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition text-slate-500 appearance-none cursor-pointer"
                            >
                                <option value="" disabled selected
                                    >{text.guests}</option
                                >
                                <option value="1-4">1-4</option>
                                <option value="5-8">5-8</option>
                                <option value="9-12">9-12</option>
                                <option value="13-16">13-16</option>
                                <option value="16+">16+</option>
                            </select>
                        </div>

                        <textarea
                            name="message"
                            rows="3"
                            maxlength="500"
                            placeholder={text.message}
                            class="w-full p-4 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                        ></textarea>

                        <button
                            type="submit"
                            id="submitBtn"
                            class="w-full bg-blue-900 text-white font-bold py-4 rounded-xl hover:bg-blue-800 transition flex items-center justify-center gap-2 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
                        >
                            <Send size={20} id="btnIcon" />
                            <span id="btnText">{text.btn}</span>
                        </button>

                        <p class="text-xs text-center text-slate-400 mt-4">
                            {text.privacy}
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script define:vars={{ sendingText: text.btnSending, originalText: text.btn }}>
    // LÃ³gica del Formulario

    const checkin = document.getElementById("checkin");
    const checkout = document.getElementById("checkout");
    const phoneInput = document.getElementById("phoneInput");
    const form = document.getElementById("quoteForm");
    const submitBtn = document.getElementById("submitBtn");
    const btnText = document.getElementById("btnText");
    const btnIcon = document.getElementById("btnIcon");

    // 1. Validar fechas (Llegada vs Salida)
    if (checkin && checkout) {
        const today = new Date().toISOString().split("T")[0];
        checkin.min = today;
        checkout.min = today;

        checkin.addEventListener("change", function () {
            if (this.value) {
                const checkinDate = new Date(this.value);
                checkinDate.setDate(checkinDate.getDate() + 1); // Salida mÃ­nima = Llegada + 1 dÃ­a

                const nextDay = checkinDate.toISOString().split("T")[0];
                checkout.min = nextDay;

                if (checkout.value && checkout.value <= this.value) {
                    checkout.value = "";
                }
            }
        });
    }

    // 2. Validar telÃ©fono (Solo nÃºmeros)
    if (phoneInput) {
        phoneInput.addEventListener("input", function (e) {
            e.target.value = e.target.value.replace(/[^0-9+\s-]/g, "");
        });
    }

    // 3. Estado de carga al enviar (Loading state)
    if (form) {
        form.addEventListener("submit", function () {
            // El navegador harÃ¡ la validaciÃ³n HTML (email, required, pattern)
            // antes de ejecutar este evento. Si pasa la validaciÃ³n:
            if (submitBtn && btnText && btnIcon) {
                submitBtn.disabled = true;
                submitBtn.classList.add("opacity-75", "cursor-not-allowed");
                btnText.innerText = sendingText;
                btnIcon.style.display = "none";
            }
        });
    }
</script>
